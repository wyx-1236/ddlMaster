/* pages/edit-task/edit-task.wxss */
.container {
  padding: 32rpx;
  background: #f8f9fa;
  min-height: 100vh;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
}

.form {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.form-group {
  margin-bottom: 40rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  background: #fff;
  box-sizing: border-box;
}

.input:focus {
  border-color: #007bff;
}

.textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 24rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  background: #fff;
  box-sizing: border-box;
  line-height: 1.5;
}

.textarea:focus {
  border-color: #007bff;
}

.picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  background: #fff;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 周期设置样式 */
.cycle-settings {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.cycle-text {
  font-size: 28rpx;
  color: #333;
}

.cycle-input {
  width: 120rpx;
  height: 80rpx;
  padding: 0 16rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  background: #fff;
  text-align: center;
  box-sizing: border-box;
}

.cycle-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  background: #fff;
  min-width: 120rpx;
}

.cycle-picker-text {
  font-size: 28rpx;
  color: #333;
}

/* 标签选择样式 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 20rpx;
  background: #fff;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s ease;
}

.tag-item.selected {
  border-color: #007bff;
  background: #e3f2fd;
  color: #007bff;
}

.tag-item.custom-tag-btn {
  border-color: #6c757d;
  background: #f8f9fa;
  color: #6c757d;
}

.tag-icon {
  margin-right: 8rpx;
  font-size: 20rpx;
}

.tag-name {
  font-size: 24rpx;
}

/* 自定义标签输入样式 */
.custom-tag-input {
  margin-top: 16rpx;
}

.input-group {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.custom-tag-name-input {
  flex: 1;
  height: 60rpx;
  padding: 0 16rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #333;
  background: #fff;
  box-sizing: border-box;
}

.custom-tag-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  font-size: 24rpx;
  background: #fff;
  color: #666;
}

.action-btn.cancel {
  border-color: #dc3545;
  color: #dc3545;
}

.action-btn.confirm {
  border-color: #007bff;
  color: #007bff;
}

/* 已选标签显示 */
.selected-tags {
  margin-top: 16rpx;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.selected-tags-text {
  font-size: 24rpx;
  color: #666;
}

.actions {
  display: flex;
  gap: 24rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-danger {
  background: #dc3545;
  color: #fff;
}

.btn-danger:hover {
  background: #c82333;
}

.btn-primary {
  background: #007bff;
  color: #fff;
}

.btn-primary:hover {
  background: #0056b3;
}



