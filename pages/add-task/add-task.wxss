/* pages/add-task/add-task.wxss */
/* 添加任务页面特定样式 */

/* 表单组样式 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.required {
  color: #DC3545;
}

/* 任务类型选择器 */
.type-selector {
  display: flex;
  gap: 20rpx;
}

.type-option {
  flex: 1;
  padding: 20rpx;
  border: 2rpx solid #E9ECEF;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
  cursor: pointer;
}

.type-option.selected {
  border-color: #4A90E2;
  background: #E5F3FF;
  color: #4A90E2;
}

.type-option:hover {
  border-color: #4A90E2;
}

/* 日期选择器 */
.date-picker {
  padding: 16rpx;
  border: 2rpx solid #E9ECEF;
  border-radius: 8rpx;
  background: #FFFFFF;
  color: #333;
  font-size: 28rpx;
}

.date-picker:empty::before {
  content: '请选择截止日期';
  color: #999;
}

/* 时间选择器 */
.time-picker {
  padding: 16rpx;
  border: 2rpx solid #E9ECEF;
  border-radius: 8rpx;
  background: #FFFFFF;
  color: #333;
  font-size: 28rpx;
}

.time-picker:empty::before {
  content: '请选择截止时间';
  color: #999;
}

/* 文本域样式 */
.textarea {
  border: 2rpx solid #E9ECEF;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 28rpx;
  background: #FFFFFF;
  min-height: 120rpx;
  line-height: 1.5;
}

.textarea:focus {
  border-color: #4A90E2;
}

/* 重要程度选择器 */
.importance-selector {
  margin-top: 16rpx;
}

/* 优先级选择器 - 重新设计 */
.priority-selector {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 8rpx;
}

.priority-option {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border: 2rpx solid #F0F0F0;
  border-radius: 16rpx;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  background: #fff;
  position: relative;
  overflow: hidden;
}

.priority-option::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.priority-option:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
  border-color: #E0E0E0;
}

.priority-option:hover::before {
  opacity: 1;
}

.priority-option.selected {
  border-color: #4A90E2;
  background: linear-gradient(135deg, #F8FBFF 0%, #E5F3FF 100%);
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 226, 0.15);
  transform: translateY(-2rpx);
}

.priority-option.selected::before {
  opacity: 1;
}

.priority-color-indicator {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.15);
}

.priority-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.priority-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #2C3E50;
  letter-spacing: 0.5rpx;
}

.priority-desc {
  font-size: 24rpx;
  color: #7F8C8D;
  line-height: 1.4;
}

.priority-checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #D1D5DB;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 20rpx;
  background: #fff;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.priority-checkbox::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #4A90E2;
  transform: scale(0);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.priority-checkbox.checked {
  border-color: #4A90E2;
  color: #fff;
}

.priority-checkbox.checked::before {
  transform: scale(1);
}

.priority-checkbox.checked {
  z-index: 1;
}

/* 周期设置样式 */
.cycle-settings {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 12rpx;
}

.cycle-type-selector {
  display: flex;
  gap: 12rpx;
}

.cycle-type-option {
  flex: 1;
  padding: 16rpx 20rpx;
  border: 2rpx solid #E9ECEF;
  border-radius: 12rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  cursor: pointer;
  transition: all 0.3s ease;
  background: #fff;
}

.cycle-type-option.selected {
  border-color: #4A90E2;
  background: #E5F3FF;
  color: #4A90E2;
  font-weight: 500;
}

.cycle-value-input {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.cycle-input {
  flex: 1;
  padding: 16rpx 20rpx;
  border: 2rpx solid #E9ECEF;
  border-radius: 12rpx;
  font-size: 28rpx;
  text-align: center;
  background: #fff;
}

.cycle-input:focus {
  border-color: #4A90E2;
  outline: none;
}

.cycle-unit {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
  min-width: 40rpx;
}

.cycle-desc {
  margin-top: 8rpx;
  padding: 12rpx 16rpx;
  background: #F8F9FA;
  border-radius: 8rpx;
  border-left: 4rpx solid #4A90E2;
}

.desc-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 提醒设置样式 */
.reminder-switch {
  float: right;
  transform: scale(0.8);
}

.reminder-settings {
  margin-top: 16rpx;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  border: 1rpx solid #E9ECEF;
}

.reminder-desc {
  margin-bottom: 16rpx;
  padding: 12rpx 16rpx;
  background: #E5F3FF;
  border-radius: 8rpx;
  border-left: 4rpx solid #4A90E2;
}

.reminder-list {
  margin-bottom: 16rpx;
}

.reminder-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx;
  margin-bottom: 12rpx;
  background: #fff;
  border-radius: 8rpx;
  border: 1rpx solid #E9ECEF;
}

.reminder-time-inputs {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.time-input-group {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.time-input {
  width: 80rpx;
  padding: 8rpx 12rpx;
  border: 1rpx solid #E9ECEF;
  border-radius: 6rpx;
  text-align: center;
  font-size: 24rpx;
  background: #fff;
}

.time-input:focus {
  border-color: #4A90E2;
  outline: none;
}

.time-unit {
  font-size: 22rpx;
  color: #666;
  min-width: 30rpx;
}

.reminder-actions {
  display: flex;
  align-items: center;
}

.remove-btn {
  padding: 8rpx 16rpx;
  background: #FF6B6B;
  color: #fff;
  border-radius: 6rpx;
  font-size: 22rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.remove-btn:active {
  background: #E55A5A;
  transform: scale(0.95);
}

.add-reminder-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx;
  background: #4A90E2;
  color: #fff;
  border-radius: 8rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.add-reminder-btn:active {
  background: #3A7BC8;
  transform: scale(0.98);
}

.add-icon {
  font-size: 28rpx;
  font-weight: bold;
}

.add-text {
  font-size: 26rpx;
}

/* 标签选择器样式 */
.tag-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 12rpx;
}

.tag-option {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 12rpx 16rpx;
  border: 2rpx solid #E9ECEF;
  border-radius: 20rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  background: #F8F9FA;
}

.tag-option.selected {
  color: #fff;
  transform: scale(1.05);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
}

.tag-option:active {
  transform: scale(0.95);
}

.tag-icon {
  font-size: 24rpx;
}

.tag-name {
  font-size: 24rpx;
  font-weight: 500;
}

.tag-desc {
  margin-top: 12rpx;
  padding: 12rpx 16rpx;
  background: #E5F3FF;
  border-radius: 8rpx;
  border-left: 4rpx solid #4A90E2;
}

/* 自定义标签样式 */
.custom-tag-btn {
  border-style: dashed !important;
  color: #6C757D !important;
}

.custom-tag-btn:active {
  background: #E9ECEF !important;
  transform: scale(0.95);
}

.custom-tag-input {
  margin-top: 16rpx;
  padding: 16rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  border: 2rpx solid #E9ECEF;
}

.input-group {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.custom-tag-name-input {
  padding: 12rpx 16rpx;
  border: 2rpx solid #E9ECEF;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fff;
}

.custom-tag-name-input:focus {
  border-color: #4A90E2;
  outline: none;
}

.custom-tag-actions {
  display: flex;
  gap: 12rpx;
  justify-content: flex-end;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

.action-btn.cancel {
  background: #F8F9FA;
  color: #6C757D;
  border: 2rpx solid #E9ECEF;
}

.action-btn.cancel:active {
  background: #E9ECEF;
}

.action-btn.confirm {
  background: #4A90E2;
  color: #fff;
  border: 2rpx solid #4A90E2;
}

.action-btn.confirm:active {
  background: #357ABD;
}

/* 项目选择器样式 */
.project-selector {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-top: 12rpx;
}

.project-option {
  padding: 16rpx;
  border: 2rpx solid #E9ECEF;
  border-radius: 12rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  background: #F8F9FA;
}

.project-option.selected {
  border-color: #4A90E2;
  background: #E5F3FF;
  transform: scale(1.02);
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.15);
}

.project-option:active {
  transform: scale(0.98);
}

.project-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.project-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.project-progress {
  font-size: 24rpx;
  color: #4A90E2;
  font-weight: 500;
}


.project-desc {
  margin-top: 12rpx;
  padding: 12rpx 16rpx;
  background: #E8F5E8;
  border-radius: 8rpx;
  border-left: 4rpx solid #28A745;
}

.importance-option .checkbox.checked {
  background: #4A90E2;
}

.importance-option text {
  font-size: 28rpx;
  color: #333;
}

/* 操作按钮 */
.form-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.form-actions .btn {
  flex: 1;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .type-selector {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .form-actions {
    flex-direction: column;
    gap: 16rpx;
  }
}
