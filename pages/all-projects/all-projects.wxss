/* pages/all-projects/all-projects.wxss */
.container {
  padding: 20rpx;
  background: #F5F5F5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 控制区域 */
.controls-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.filter-tabs {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
  background: #F8F9FA;
  border: 1rpx solid #E9ECEF;
  transition: all 0.3s ease;
}

.filter-tab.active {
  background: #4A90E2;
  color: #fff;
  border-color: #4A90E2;
}

.sort-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sort-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: #F8F9FA;
  border-radius: 8rpx;
  border: 1rpx solid #E9ECEF;
}

.sort-text {
  font-size: 24rpx;
  color: #333;
}

.sort-icon {
  font-size: 20rpx;
}

.edit-toggle {
  font-size: 24rpx;
  color: #4A90E2;
  padding: 8rpx 16rpx;
  border: 1rpx solid #4A90E2;
  border-radius: 8rpx;
}

/* 项目区域 */
.projects-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.projects-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 项目项 */
.project-item {
  padding: 24rpx;
  border: 2rpx solid #E9ECEF;
  border-radius: 12rpx;
  background: #F8F9FA;
  transition: all 0.3s ease;
}

.project-item:active {
  transform: scale(0.98);
  background: #E9ECEF;
}

.project-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.project-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  margin-right: 16rpx;
}

.project-status {
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.status-active {
  background: #D4EDDA;
  color: #155724;
}

.status-completed {
  background: #D1ECF1;
  color: #0C5460;
}



.project-progress {
  margin-bottom: 16rpx;
}

.progress-bar {
  height: 8rpx;
  background: #E9ECEF;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4A90E2 0%, #357ABD 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 22rpx;
  color: #4A90E2;
  font-weight: 500;
}

.project-meta {
  display: flex;
  gap: 24rpx;
  margin-bottom: 16rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.meta-label {
  font-size: 22rpx;
  color: #999;
}

.meta-value {
  font-size: 22rpx;
  color: #666;
}

.project-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.project-tag {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  color: #fff;
}

.tag-icon {
  font-size: 18rpx;
}

.tag-name {
  font-size: 20rpx;
  font-weight: 500;
}

.project-actions {
  display: flex;
  gap: 12rpx;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #E9ECEF;
}

.action-btn {
  flex: 1;
  text-align: center;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
  background: #6C757D;
  color: #fff;
}


.action-btn.resume {
  background: #28A745;
}

.action-btn.delete {
  background: #DC3545;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  display: block;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #CCC;
  display: block;
}

/* 浮动添加按钮 */
.fab {
  position: fixed;
  right: 32rpx;
  bottom: 32rpx;
  width: 112rpx;
  height: 112rpx;
  background: #4A90E2;
  border-radius: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 226, 0.3);
  z-index: 1000;
}

.fab-icon {
  font-size: 48rpx;
  color: #fff;
  font-weight: 300;
}
